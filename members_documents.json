{
  "settings": {
    "analysis": {
      "analyzer": {
        "case_insensitive": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      },
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "en": {
          "match_mapping_type": "string",
          "match": "*",
          "mapping": {
            "type": "text",
            "analyzer": "english",
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      }
    ],
    "properties": {
      "ADDDATE": {
        "type": "date",
        "format": "strict_date_optional_time"
      },
      "ATTACHMENT": {
        "type": "text",
        "analyzer": "english"
      },
      "CREATED_AT": {
        "type": "date",
        "format": "strict_date_optional_time"
      },
      "DOC_CATG": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "DOC_ID": {
        "type": "long"
      },
      "DOC_MAIN_CATG": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "DOC_NAME": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "DOC_VERIFICATION_STATUS": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "FLAG": {
        "type": "long"
      },
      "ID": {
        "type": "long"
      },
      "MEMID": {
        "type": "long"
      },
      "MODDATE": {
        "type": "date",
        "format": "strict_date_optional_time"
      },
      "NOT_ANALYZED_CATEGORY_NAME": {
        "type": "keyword",
        "normalizer": "lowercase_normalizer"
      },
      "VERSION": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      }
    }
  }
}